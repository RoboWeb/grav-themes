<ul class="nav flex-column">

    {% for page in pages.children.visible %}
        {% set active_page = (page.active or page.activeChild) ? 'active' : '' %}
        <li class="nav-item">
            <a href="{{ page.url }}" class="nav-link {{ active_page }}">
                {% if page.header.icon %}
                    <i class="fa fa-{{ page.header.icon }}"></i>
                {% endif %}
                {{ page.menu }}
            </a>
        </li>
    {% endfor %}

    {% for mitem in site.menu %}
        <li class="nav-item">
            <a href="{{ mitem.url }}" class="nav-item">
                {% if mitem.icon %}
                    <i class="fa fa-{{ mitem.icon }}"></i>
                {% endif %}
                {{ mitem.text }}
            </a>
        </li>
    {% endfor %}
</ul>
